#!/usr/bin/env bash

if [ $# -eq 0 ]
  then
    emacsclient -t --alternate-editor ""
  else
    ARG=$1
    if [ -d "${ARG}" ] ; then
      DIRPATH=$(realpath "$ARG")
      emacsclient -t -e "(deer \"$DIRPATH/\")" --alternate-editor ""
    else
      emacsclient -t -e "(find-file \"$ARG\")" --alternate-editor ""
    fi
fi
